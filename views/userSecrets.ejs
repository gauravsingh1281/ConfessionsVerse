<%- include('partials/header') %>

    <div
        class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 px-4 py-8 text-white">
        <div class="w-full max-w-6xl mx-auto text-center space-y-6 sm:space-y-8">

            <!-- Icon + Heading -->
            <div class="flex justify-center">
                <i class="fas fa-key fa-4x sm:fa-6x text-yellow-400 drop-shadow-lg animate-pulse"></i>
            </div>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold px-4">
                Your Confessions üïäÔ∏è
            </h1>
            <p class="text-base sm:text-lg text-gray-300 px-4">
                These are the anonymous confessions you've shared with the world.
            </p>

            <!-- Confession List -->
            <div class="space-y-4 px-4">
                <% if (SECRET && SECRET.length> 0) { %>
                    <% SECRET.forEach((data)=> { %>
                        <div
                            class="bg-gray-700 text-white text-sm sm:text-base lg:text-lg px-4 sm:px-6 py-4 rounded-xl shadow-md border-l-4 border-yellow-400 max-w-4xl mx-auto text-left break-words">
                            <%= data.content %>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div
                                    class="bg-gray-800 text-gray-300 text-base sm:text-lg px-6 py-12 rounded-xl shadow-md max-w-2xl mx-auto text-center border-2 border-dashed border-gray-600">
                                    <i class="fas fa-user-secret fa-3x text-gray-500 mb-4"></i>
                                    <p class="text-xl font-semibold mb-2">You haven't shared any confessions yet...</p>
                                    <p class="text-gray-400">Share your first anonymous confession with the world!</p>
                                </div>
                                <% } %>
            </div>

            <hr class="border-gray-600 my-6 sm:my-8 w-3/4 mx-auto" />

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row flex-wrap justify-center gap-3 sm:gap-4 px-4">
                <a href="/secrets"
                    class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-3 px-6 rounded-full shadow-md transition duration-200 text-center">
                    Back to All Confessions
                </a>
                <a href="/submit"
                    class="bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-full shadow-md transition duration-200 text-center">
                    Submit Another Confession
                </a>
                <a href="/logout"
                    class="bg-white hover:bg-gray-100 text-gray-900 font-semibold py-3 px-6 rounded-full shadow-md transition duration-200 text-center">
                    Log Out
                </a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>