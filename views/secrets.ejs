<%- include('partials/header') %>

  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 px-4 py-12 text-white">
    <div class="w-full max-w-4xl text-center space-y-8">

      <!-- Icon + Heading -->
      <div class="flex justify-center">
        <i class="fas fa-key fa-6x text-yellow-400 drop-shadow-lg animate-pulse"></i>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold">
        You've Entered ConfessionsVerse 🕊️
      </h1>
      <p class="text-lg text-gray-300">
        These are real confessions anonymously shared by users just like you.
      </p>

      <!-- Confessions List -->
      <div class="space-y-4">
        <% usersWithSecrets.forEach((user)=> { %>
          <% for (let i=0; i < user.secret.length; i++) { %>
            <p
              class="bg-gray-700 text-white text-base sm:text-lg px-6 py-4 rounded-xl shadow-md border-l-4 border-yellow-400">
              <%= user.secret[i].content %>
            </p>
            <% } %>
              <% }); %>
      </div>

      <hr class="border-gray-600 my-8 w-3/4 mx-auto" />

      <!-- Buttons -->
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/logout"
          class="bg-white hover:bg-gray-100 text-gray-900 font-semibold py-2 px-6 rounded-full shadow-md transition duration-200">
          Log Out
        </a>
        <a href="/submit"
          class="bg-gray-700 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded-full shadow-md transition duration-200">
          Submit a Confession
        </a>
        <a href="/secrets/<%=userId%>"
          class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-2 px-6 rounded-full shadow-md transition duration-200">
          View Your Confessions
        </a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>